<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/Black"
    android:layout_height="match_parent"
    tools:context=".Login.TermsConditions">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="top"
        android:text="Conditions d'utilisation de Vima"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:layout_marginHorizontal="30dp"
    android:background="#303030"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp">
    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/White"
        android:text="@string/conditions"
        android:gravity="center"
        android:layout_height="400dp"/>
</ScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Vous aurez accès à une version PDF de ces conditions d'utilisation dans la page (A Propos) de Vima"
        android:textColor="@color/White"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_marginBottom="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_edges_button"
        android:text="Accepter les termes et conditions"
        android:id="@+id/accept"
        android:padding="5dp"/>
</LinearLayout>