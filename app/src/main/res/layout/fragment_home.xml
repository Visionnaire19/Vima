                        android:scaleType="fitCenter"
                        android:src="@drawable/whi4jnmir8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
